<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="chatapp.com.claudineibjr.androidchatapp.ConversaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversa_txtNomeContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/conversa_txtStatusContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollConversa"
            android:layout_width="match_parent"
            android:layout_height="470dp">

            <LinearLayout
                android:id="@+id/linearLayoutConversa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- <TextView
                    android:id="@+id/textView"
                    android:layout_width="700px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:background="#BBDEFB"
                    android:padding="3dp"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="18dp" /> -->

                <!-- <TextView
                    android:id="@+id/textView1"
                    android:layout_width="700px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:background="#C5CAE9"
                    android:padding="3dp"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#000000"
                    android:textSize="18dp" /> -->

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--<EditText
                android:id="@+id/txtMensagem"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textAutoComplete|textLongMessage" />-->

            <AutoCompleteTextView
                android:id="@+id/txtMensagem"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/btnDBGEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enviar" />

            <Button
                android:id="@+id/btnDBGReceber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Receber" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>